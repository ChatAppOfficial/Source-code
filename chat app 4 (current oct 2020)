  setScreen("chat");
});

onEvent("sm", "click", function() {
  if (getText("mi") != '') {
    hideE(); hideT();
    eopen = 'n';
    readRecords("chat", {}, function(records) {
      for (var i =0; i < records.length; i++) {
      updateRecord("chat", {id:1, ch:records[i].ch + "\n" + Tag + " [: " + uname + " :]- "  + getText("mi")}, function(record, success) {
        setText("mi", '');
        showT();
      });
      
        
      }
    });
    
    
  }
});

onEvent("oe", "click", function() {
  if (eopen === 'n') {
    eopen = 'y';
    showE();
  } else if (eopen === 'y') {
    eopen = 'n';
    hideE();
  }
});

