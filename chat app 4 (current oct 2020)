//Vars:

var adminapps = "open";

var onclick;

var a;

var c;

var rid;

var o;

var pimage;

var pass;

var eopen = 'n';

var uname;

var Tag;

//Functions:

function home() {
  setScreen("home");
}

function stop(lid) {
  stopTimedLoop(lid);
}

function tag() {
  if (a === "yes") {
    Tag = "{ADMIN}";
  } else if (c === "yes") {
    Tag = "{CREATOR}";
  } else if (o === "yes") {
   Tag = "{OWNER}"; 
  } else if (a && c && o === "no") {
    Tag = '';
  }
}

function name() {
  var gbjgfb = timedLoop(0, function() {
    setText("named", "Welcome, " + uname);
    setImageURL("pimage1", pimage);
    setImageURL("pimage2", pimage);
  });
}

function chat() {
  var gjd = timedLoop(0, function() {
    readRecords("chat", {}, function(records) {
      for (var i =0; i < records.length; i++) {
        if (getText("ta") != records[i].ch) {
          setText("ta", records[i].ch);
        }
      }
    });
    
  });
}

function image() {
  var gojd = timedLoop(0, function() {
    readRecords("image", {}, function(records) {
      for (var i =0; i < records.length; i++) {
        setImageURL("si", records[i].im);
        setText("iuu", records[i].uploader);
      }
    });
    
  });
}

function updates() {
  var gjkd = timedLoop(0, function() {
    readRecords("updates", {}, function(records) {
      for (var i =0; i < records.length; i++) {
        if (getText("ut") != records[i].ch) {
          setText("ut", records[i].ch);
        }
      }
    });
    
  });
}

function hideE() {
  hideElement("ob");
  hideElement("happy");
  hideElement("mad");
}

function hideT() {
  hideElement("oe");
  hideElement("sm");
  hideElement("mi");
}

function showT() {
  showElement("mi");
  showElement("oe");
  showElement("sm");
}

function showE() {
  showElement("ob");
  showElement("happy");
  showElement("mad");
}

function checkFban() {
readRecords("ban", {}, function(records) {
  for (var i =0; i < records.length; i++) {
  if (records[i].uid.includes(getUserId())) {
    timedLoop(0, function() {
      setScreen("banned");
    });
  } else {
    setScreen("login");
  }
    
  }
});
  
}
//Code:

checkFban();

onEvent("cre", "click", function() {
  setScreen("create");
});

onEvent("gs", "click", function() {
  hideElement("gs");
  setTimeout(function() {
  prompt("Hello there! You must be new, Let me tell you about the Chat App series! Chat app 1 copied ChatStars (a deleted project nowdays)'s design and some code, then I made Chat App 2, It was and still is a successful project! And now we move on to Chapter 3, It's terrible. Too laggy and takes a while to load. And it isn't anywhere near completion. Thanks for reading this far, Now, lets get you an account.");
  setText("user", prompt("Please enter the name you want everyone to call you (DO NOT USE YOUR REAL NAME)."));
  showElement("user");
  setTimeout(function() {
  setText("pass", prompt("Hello, " + getText("user") + "! Now enter a secure password to protect your account."));
  showElement("pass");
  setTimeout(function() {
  prompt("Looks like your all done! just click \"confirm\" to login! Or refresh the page to restart.");
  showElement("c");
  showElement("rptr");
  }, 1000);
  }, 1000);
  }, 1000);
});

onEvent("c", "click", function() {
  hideElement("c");
  hideElement("rptr");
  hideElement("label2");
  hideElement("pass");
  hideElement("user");
  setTimeout(function() {
    
              createRecord("users", {uid:getUserId(), name:getText("user"), pass:getText("pass"), admin:"no", creator:"no", owner:"no", dark:"no", image:"icon://fa-user"}, function(record) {
               prompt("Welcome, " + getText("user") + ", To chat app 4! Please refresh the page to login");
              });
  }, 1000);
});


onEvent("l", "click", function() {
  if (getText("luser") && getText("lpass") != '') {
  hideElement("luser");
  hideElement("lpass");
  hideElement("l");
  hideElement("cre");
  setTimeout(function() {
    prompt("Hello, " + getText("luser") + "! Let me check the records to see if you are the real " + getText("luser") + ".");
    var loginloop = timedLoop(0, function() {
      readRecords("users", {}, function(records) {
        for (var i =0; i < records.length; i++) {
          if (getText("luser") === records[i].name) {
            if (getText("lpass") === records[i].pass) {
              stop(loginloop);
              uname = records[i].name;
              pimage = records[i].image;
              rid = records[i].id;
              pass = records[i].pass;
              if (records[i].admin === "yes") {
                  a = "yes";
                  showElement("oap");
                  showElement("clr");
                  hideElement("apply-for-admin");
                } else {
                  a = "no";
                  if (adminapps === "open") {
                    showElement("apply-for-admin");
                  }
                }
                if (records[i].creator === "yes") {
                  c = "yes";
                  showElement("oap");
                  showElement("clr");
                  showElement("uti");
                  showElement("clru");
                  showElement("su");
                  hideElement("apply-for-admin");
                } else {
                  c = "no";
                } 
                if (records[i].owner === "yes") {
                  o = "yes";
                  showElement("oap");
                  showElement("clr");
                  hideElement("apply-for-admin");
                } else {
                  o = "no";
                }
                
              setTimeout(function() {
                tag(); home(); name(); chat(); updates(); image();
              }, 1000);
            }
          }
        }
      });
      
    });
  }, 1000);
  }
});



onEvent("ol", "click", function() {
  prompt("Taking you to the earliest surviving chat app!");
  open("https://studio.code.org/projects/applab/0-mwQbXXVx2nbYYK4NuOEtZciu-_7O4H4OaKmyFTwVk");
});




